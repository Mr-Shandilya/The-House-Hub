<header class="bg-red-500 text-white shadow-md w-full">
  <div class="max-w-6xl mx-auto px-4">
    <nav class="flex items-center py-4">

      <div class="flex items-center flex-1 space-x-6">

        <a href="/" class="text-lg font-bold py-2 px-4 rounded transition duration-300 <%= currentPage === 'index' ? 'bg-red-600' : 'hover:bg-red-400' %>">
          House Hub
        </a>

        <ul class="flex items-center space-x-4 text-sm sm:text-base font-medium">
          <% if (isLoggedin) { %>
            <% if(user && user.userType=='guest'){%>
            <li>
              <a href="/homes" class="<%= currentPage === 'Home' ? 'bg-red-600' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300">Homes-List</a>
            </li>
            <li>
              <a href="/favourites" class="<%= currentPage === 'favourites' ? 'bg-red-600' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300">Favourites</a>
            </li>
            <li>
              <a href="/bookings" class="<%= currentPage === 'bookings' ? 'bg-red-600' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300">Bookings</a>
            </li>
            <%}else{%>
            <li>
              <a href="/host/host-home-list" class="<%= currentPage === 'host-homes' ? 'bg-red-600' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300">Host Homes</a>
            </li>
            <li>
              <a href="/host/add-home" class="<%= currentPage === 'addHome' ? 'bg-red-600' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300">Add Home</a>
            </li>
            <%}%>
          <% } %>
        </ul>
      </div>

      <div class="flex items-center space-x-3">
        <% if (!isLoggedin) { %>
          <a href="/signup" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 shadow-md">Sign Up</a>
          <a href="/login" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 shadow-md">Login</a>
        <% } else { %>
          <form action="/logout" method="POST" class="m-0">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 shadow-md">Logout</button>
          </form>
        <% } %>
      </div>

    </nav>
  </div>
</header>
